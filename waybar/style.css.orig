@import url('../../.cache/wal/colors-waybar.css');
@define-color background #181818;
@define-color foreground #B9B9B9;
@define-color accent #E76219;
/*@define-color primary;
@define-color secondary;*/

* {
	font-family: "FiraCode Nerd Font Propo";
	font-size: 16px;
	min-height: 0;
	padding: 0;
	border: none;
	border-radius: 0px;
	margin: 0;
}

window#waybar {
	background-color: @background;
}

/* TOOLTIPS */
tooltip {
	background-color: alpha(@background, .7);
	border: solid;
	border-width: 2px;
	border-radius: 8px;
	border-color: @accent;
}

tooltip label {
	color: @foreground;
	margin: -1.5px 3px;
}

/* WORKSPACES */
#workspaces button {
	background-color: alpha(@color1, 0.5);
	color: @foreground;
	border-radius: 4px;
	margin: 2px 2px;
}

#workspaces button.active {
	background-color: @color1;
}

/* AUDIO PREVIEW */
#mpris {
	color: @foreground;
}

/* RIGHT INFO */
#tray,
#bluetooth,
#battery,
#network,
#wireplumber {
	color: @foreground;
	background-color: @color1;
	border-radius: 4px;
	padding: 0 0.4em;
	margin: 2px 0.25em;
}

#clock {
	color: @foreground;
	padding: 0px 1em;
}
